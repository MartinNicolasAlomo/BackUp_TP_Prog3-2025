<%- include("partials/head.ejs") %>
<%- include("partials/nav.ejs") %>
        <hr>
        <h1><%= title %></h1>
        <hr>
        
        <section class="seccion-productos">
            


        
            <div class="contenedor-productos">
                <section class="seccion-peliculas">
                    <h3 class="titulo-peliculas">Películas</h3>
                    <div class="contenedor-peliculas"></div>
                        <% products.forEach(prod =>{%>
                            <% if (prod.categoria === "Película") { %>
                                <div class="carta-producto">
                                        <div class="contenedor-imagen-producto">
                                            <img class="imagen-producto" src=" <%= prod.imagen %> " alt="<%= prod.nombre %>">
                                        </div>
                                        <div class="contenedor-nombre-producto">
                                            <h3 class="nombre-producto"><%= prod.nombre %></h3>
                                        </div>
                                        <div class="contenedor-id-producto">
                                                <p class="id-producto">ID: <%= prod.id %></p>
                                            </div>
                                        <div class="contenedor-precio-producto">
                                            <p class="precio-producto">$<%= prod.precio.toFixed(2)%></p>
                                        </div>
                                        <div class="contenedor-boton-producto">
                                            <button class="boton-estado-actividad" data-id="${prod.id}">${estadoActividad}</button>
                                        </div>
                                    </div>
                            <% }; %>
                       <% }); %> 
                </section>
                <section class="seccion-series">
                    <h3 class="titulo-series">Series</h3>
                    <div class="contenedor-series"></div>
                        <% products.forEach(prod =>{%>
                            <% if (prod.categoria === "Serie") { %>
                                <div class="carta-producto">
                                        <div class="contenedor-imagen-producto">
                                            <img class="imagen-producto" src=" <%= prod.imagen %> " alt="<%= prod.nombre %>">
                                        </div>
                                        <div class="contenedor-nombre-producto">
                                            <h3 class="nombre-producto"><%= prod.nombre %></h3>
                                        </div>
                                        <div class="contenedor-id-producto">
                                                <p class="id-producto">ID: <%= prod.id %></p>
                                            </div>
                                        <div class="contenedor-precio-producto">
                                            <p class="precio-producto">$<%= prod.precio.toFixed(2)%></p>
                                        </div>
                                        <div class="contenedor-boton-producto">
                                            <button class="boton-estado-actividad" data-id="${prod.id}">${estadoActividad}</button>
                                        </div>
                                    </div>
                            <% }; %>
                       <% }); %> 
                </section>


            </div>
        </section>

        

<%- include("partials/footer.ejs") %>
